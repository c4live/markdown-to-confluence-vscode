{
  "name": "markdown-to-confluence-vscode",
  "displayName": "Markdown to confluence for VSCode Extension",
  "version": "0.0.5",
  "publisher": "transnano",
  "description": "VScode extension for convert markdown to confluence(atlassian wiki markup)",
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint --max-warnings=0 src/**/*.ts",
    "watch": "tsc -watch -p ./",
    "clean": "rimraf out/",
    "build": "run-s clean build:tsc",
    "build:tsc": "tsc",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "run-s clean test:jest",
    "test:jest": "jest"
  },
  "dependencies": {
    "@types/marked": "^1.1.0",
    "escape-string-regexp": "^4.0.0",
    "marked": "^1.1.1",
    "ts-polyfill": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^14.0.23",
    "@types/jest": "^26.0.4",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
    "typescript": "^3.9.7",
    "@types/array-unique": "^0.3.0",
    "array-unique": "^0.3.2",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transnano/markdown-to-confluence-sample.git"
  },
  "keywords": [
    "markdown",
    "confluence",
    "convert",
    "atlassian",
    "wiki"
  ],
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.md2confl.convert2Clipboard",
    "onCommand:extension.md2confl.convert2Window",
    "onWebviewPanel:extension.md2confl.result"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.md2confl.convert2Clipboard",
        "category": "md2confl",
        "title": "Convert markdown to confluence and Copy to clipboard"
      },
      {
        "command": "extension.md2confl.convert2Window",
        "category": "md2confl",
        "title": "Convert markdown to confluence and Open window"
      }
    ]
  },
  "author": "Transnano <transnano.jp@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/transnano/markdown-to-confluence-sample/issues"
  },
  "homepage": "https://github.com/transnano/markdown-to-confluence-sample#readme"
}
